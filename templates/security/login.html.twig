{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
<form method="post">
    <h2 class="my-2">Connexion</h2>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous etes connect√© en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 my-3 font-weight-normal">Merci de vous connecter</h1>
    <label for="inputEmail" class="my-2">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50 mx-auto my-1" autocomplete="email" required autofocus>
    <label for="inputPassword" class="my-2">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control w-50 mx-auto my-1" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me" class="my-2"> Se souvenir de moi
        </label>
    </div>

    <button class="btn btn-lg btn-success my-2" type="submit">
       Se connecter
    </button>
</form>
{% endblock %}
